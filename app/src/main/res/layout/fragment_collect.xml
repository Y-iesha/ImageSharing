<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white">

    <!--  拍照图标-->
    <RelativeLayout
        android:id="@+id/rl_photograph"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/photograph"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/camera"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <!--  相册图标-->
    <RelativeLayout
        android:id="@+id/rl_album"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        >

        <Button
            android:id="@+id/album"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/photo_album"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <!--    分隔线-->
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/rl_album"
        android:background="#F3797D"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_EditTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/rl_1"
        android:background="@color/white"
        android:gravity="center">

        <EditText
            android:id="@+id/EditTitle"
            android:layout_width="397dp"
            android:layout_height="54dp"
            android:hint="请输入图片标题"
            android:textColor="@color/black"
            android:textColorHint="#bcbcbc"></EditText>

    </RelativeLayout>

    <!--    分隔线-->
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/rl_EditTitle"
        android:background="#F3797D"></RelativeLayout>

    <!--选择的图片-->
    <RelativeLayout
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/rl_2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_bg" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/picture"
        android:gravity="center">

        <Button
            android:id="@+id/upload"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#3A5CAC"
            android:text="上传"
            android:textSize="50dp"></Button>

    </RelativeLayout>

</RelativeLayout>
